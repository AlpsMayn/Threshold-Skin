		AddGameButton
		{
			font-size=14
			font-size=13 [$OSX]
			font-family=basefont
			textcolor="labelfocus"
			padding-right=30
			padding-left=17
			font-style=uppercase
			render_bg
			{
				//0="image( x0 + 2, y0 + 7, x1, y1, graphics/icon_collapse )"
			}
		}
		
