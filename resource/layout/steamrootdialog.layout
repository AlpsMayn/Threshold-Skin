	colors
	{
		support_flag_red "169 72 71 255"
		
		support_hover_red1 "193 94 93 255"
		support_hover_red2 "156 64 63 255"
		
		inbox_active_text DefaultText
		inbox_inactive_text DefaultText.Disabled

		backdrop "20 20 20 255"
		
		disabledborder "63 63 63 255"
	}
	
	layout
	{
		region {name=hidden width=0 height=0}
		region {name=left width=230 y=32}
		region {name=bottom region=left width=max height=48 align=bottom}
		
		place { control="New" region=hidden}
		
		place { control="UINavigatorPanel" width=max height=max margin-right=0 margin-left=0 margin-bottom=0 margin-top=0 }
		
		place { control="UIStatusPanel" x=0 region=left width=max height=42 align=bottom margin-bottom=48 }
		
		place { control="MenuBar" height=40 width=48 y=32 x=0 }
		
		place { control="SupportAlert, ParentalLockButton, exitVR, startVR, InboxButton" region=bottom align=right height=48 width=48 spacing=0 dir=right}

		place { control="fullscreen,frame_minimize,frame_maximize,frame_close" align=right width=46 height=32 spacing=0 }
		
		place { control="add_game, account_balance_seperator" x=14 y=16 region=hidden height=0 width=0}
		
		region { name=account region=left y=47 margin-left=0 width=max height=63 }
		place { control="FriendPanel" height=48 y=0 width=48 margin-left=4 region=account}
		place { control="account_balance" start=FriendPanel dir=down y=0 x=8 region=account}

		place { control="account_URL, universe_label" margin-left=57 y=9 spacing=5 region=account}
		place { control="online_friends" height=12 y=30 spacing=5 margin-left=57 region=account}
		place { control="view_friends" height=12 y=30 margin-left=57 region=account}
	}
}
