			render_bg
			{
				//0="image( x0 + 2, y0 + 7, x1, y1, graphics/icon_collapse_over )"
			}
		}	
		


		CSteamRootDialog
		{
			bgcolor=almostblack

			render_bg
			{
				// top area and graphics
				1="fill( x0, y0, x1, y0+72, Root.Header)"
				2="fill( x0, y0+72, x0+230, y1-48, Root.LeftCol)"
				3="fill( x0, y1-48, x0+230, y1, Root.LeftCol.Bottom)"
				4="fill( x0+230, y0+72, x1, y1, almostblack)"
			}
			render
			{
				0="image (x0+14, y0+154, x1, y1, graphics/Threshold/store)"
				1="image (x0+14, y0+199, x1, y1, graphics/Threshold/library)"
				2="image (x0+14, y0+244, x1, y1, graphics/Threshold/community)"
				3="image (x0+14, y0+289, x1, y1, graphics/Threshold/me)"
				
				4="fill(x0, y0, x1, y0+1, Frame.Outline.Focus)"
				5="fill(x0, y0, x0+1, y1, Frame.Outline.Focus)"
				6="fill(x1-1, y0, x1, y1, Frame.Outline.Focus)"
				7="fill(x0, y1-1, x1, y1, Frame.Outline.Focus)"
			}
		}
		
		CSteamRootDialog:FrameFocus{
			render
			{
				0="image (x0+14, y0+154, x1, y1, graphics/Threshold/store)"
				1="image (x0+14, y0+199, x1, y1, graphics/Threshold/library)"
				2="image (x0+14, y0+244, x1, y1, graphics/Threshold/community)"
				3="image (x0+14, y0+289, x1, y1, graphics/Threshold/me)"
				
				4="fill(x0, y0, x1, y0+1, Frame.Outline)"
				5="fill(x0, y0, x0+1, y1, Frame.Outline)"
				6="fill(x1-1, y0, x1, y1, Frame.Outline)"
				7="fill(x0, y1-1, x1, y1, Frame.Outline)"
			}
		}
		
		"MenuBar MenuButton" 
		{
			textcolor="none"
			inset="0 0 0 0"
			render{
				0="image(x0+16,y0+14,x1,y1,graphics/Threshold/menu)"
			}
		}
		
		"MenuBar MenuButton:hover" 
		{
			render_bg {
				0="fill(x0,y0,x1,y1,Menu.Button.Hover)"
			}
		}
		
		"MenuBar MenuButton:frameFocus:hover" 
		{
			render_bg {
				0="fill(x0,y0,x1,y1,Menu.Button.Hover)"
			}
		}
		
		"MenuBar MenuButton:frameFocus:selected" 
		{
			render_bg {
				0="fill(x0,y0,x1,y1,Accent)"
			}

		}
		
		ClientTitle
		{
			textcolor=none
		}

		view_friends
		{
			textcolor=none
			bgcolor="none"
			font-family=basefont
			font-size=11
			font-size=13 [$WINDOWS]
			font-weight=400
			font-style=regular
		}
		
		view_friends:hover
		{
			textcolor=none
		}

		online_friends
		{
			textcolor=Root.SubLabel.Text
			bgcolor="none"
			font-family=basefont
			font-size=11
			font-size=13 [$WINDOWS]
			font-weight=400
			font-style=regular
			render
			{
				0="image(x1+3, y0+5, x1+20, y1, graphics/Threshold/scroll/down )"
			}
		}

		online_friends:disabled
		{
			textcolor=Root.LeftCol.Disabled
		}

		support_alert
		{
			font-family=basefont
			font-size=12
			font-size=14 [$WINDOWS]
			font-weight=1000
			font-style=none
			textcolor=DefaultText
			padding-left=50
			padding-right=50
			padding-top=6
			inset="-8 -3 8 0"
			render {}
			render_bg {
				0="fill( x0, y0 + 3, x1-1, y1, parental_lock_inactive1 )"
			}
		}
		
		support_alert:hover
		{
			render_bg {
				0="fill( x0, y0 + 3, x1-1, y1, parental_lock_inactive3 )"
			}
		}



		inbox_button
		{
			font-family=basefont
			font-size=12
			font-size=14 [$WINDOWS] 
			font-weight=800
			font-style=none
