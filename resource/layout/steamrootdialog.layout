			"ControlName"		"MenuBar"
			style=RootMenu
		}
		
		SupportAlert
		{
			ControlName=Button
			labelText="#Steam_SupportAlert"
			style="support_alert"
			textAlignment=center
			command="OpenSupportAlertWindow"
		}	

		ParentalLockButton
		{
			ControlName=ToggleButton
			style="parental_lock_button"
			labelText=""
			text=""
			command="ParentalLock"
		}
		
		InboxButton
