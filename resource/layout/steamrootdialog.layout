	layout
	{
		region {name=hidden width=0 height=0}
		region {name=left width=225 y=32}
		region {name=bottom region=left width=max height=50 align=bottom}
		
		place [!$OSX] { control="New" width=72 height=32 y=0 width=max align=right margin-right=180}
		place [$OSX]  { control="New" width=145 height=32 y=0 width=max align=right margin-right=-20}
		
		place { control="UINavigatorPanel" width=max height=max margin-right=0 margin-left=0 margin-bottom=0 margin-top=0 }
		
		place { control="UIStatusPanel" x=0 region=left width=max height=25 align=bottom margin-bottom=50 }
		
		place [!$OSX] { control="MenuBar" height=40 width=50 y=32 x=0 }

		//place [$OSX]  { control="account_balance, account_balance_seperator, account_URL, universe_label, fullscreen" align=right margin-top=12 margin-right=15 spacing=7 }
		
		place { control="SupportAlert, ParentalLockButton, exitVR, startVR, InboxButton" region=bottom align=right height=50 width=50 spacing=0 dir=right}

		place [!$OSX]  { control="fullscreen,frame_minimize,frame_maximize,frame_close" align=right margin-top=0 margin-right=0 width=46 height=32 spacing=0 }
		place [$OSX] { control="frame_close,frame_minimize,frame_maximize" align=left margin-top=10 margin-left=4 spacing=-7 }
		
		place { control="add_game" x=14 y=16 region=hidden height=0 width=0}
		
		region { name=account region=left y=48 margin-left=5 width=max height=50 }
		place { control="FriendPanel" height=48 y=0 width=48 margin-left=0 region=account}

		place { control="account_URL, universe_label" margin-left=52 y=13 spacing=5 region=account}
		place { control="account_balance_seperator, account_balance" start=account_URL x=1 y=0 spacing=4 region=account}
		place { control="online_friends" height=12 y=30 margin-left=52 region=account}
		place { control="view_friends" height=12 y=30 margin-left=52 region=account}
	}
