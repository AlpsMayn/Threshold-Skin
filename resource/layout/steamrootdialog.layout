	controls
	{

			
		"fullscreen"
		{
			"ControlName"		"Button"
			style="FullscreenButton"
			command="fullscreen"
			tooltiptext="#tooltip_view_fullscreen" 
		}
		
		"startvr"
		{
			"ControlName"		"Button"
			style="VRButton"
      			command="url steam://run/250820"
     			tooltiptext="#tooltip_view_vr_start" 
